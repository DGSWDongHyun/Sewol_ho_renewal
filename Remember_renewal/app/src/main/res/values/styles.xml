<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/GRAY_ground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomEditTextTheme" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--font style for toolbar.-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/main_font</item>
    </style>


</resources>
